<html>
    <head>
        <title><%= data.title %></title>
        <meta name="viewport" content="width=device-width,minimum-scale=0.1">
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/css/header.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
        <!-- ----- Meta Tags // Embed ----- -->
    
        <!-- Classic Discord Embed -->
        <meta property="og:site_name" content="<%= settings.name %>" />
        <meta property="og:footer" content="Made with ShareX-Express" />
        <meta content="<%= data.title %>" property="og:title">
        <% if (data.type == 'png' || data.type == 'jpg' || data.type == 'gif') {%> <meta content="<%= settings.domain %>/uploads/<%= data.type %>/<%= data.title %>" property="og:image"> <% } %>
        <meta content="<%= data.url %>" property="og:url">
        <meta content="<%= settings.embedColor %>" name="theme-color" data-react-helmet="true">
        <meta property="og:image" content="<%= data.directurl %>">
        <meta property="twitter:card" content="summary_large_image">
    </head>

    <div class="container">
        <div class="jumbotron">
            <% if (data.type == 'txt') { %> <p style="color:white;"><%= content %></p> <% } %>
            <% if (data.type == 'png' || data.type == "jpg" || data.type == "gif") { %> <img src="<%= settings.domain %>/uploads/<%= data.type %>/<%= data.title %>"> <% } %>
        </div>
        <h3 style="color:white;">Created on <%= data.date %><br><% if (data.expiresAt) {%>Expires at <%= new Date(data.expiresAt).toUTCString() %><% } %></h3>
        <p><a href="<%= settings.domain %>/uploads/<%= data.type %>/<%= data.title %>">Open full file?</a></p>
    </div>

    <p style="color:white; position:absolute; bottom:0; width:100%; left:0;"><a href="/profile">Profile</a> | <%= data.title %> <a style="color:white;" href="#" onclick="openTitleModal()"><i style="font-size:15px;" class="fa fa-pencil" aria-hidden="true"></i></a> | <a href="https://github.com/zevhr/sharex-express" target="_blank">GitHub</a></p>

    <div id="modal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span><br>
    
        <div style="text-align:center;">
          <input style="font-size:20px; width:330px;" type="text" id="title" name="title" placeholder="New title.." required><br>
          <input style="font-size:20px; width:330px;" type="text" id="titleSecret" name="titleSecret" placeholder="Secret.." required><br>
          <button type="button" onclick="changeTitle('<%= data.title %>')">Submit</button><br>
    
          <div id="noti"></div>
        </div>
        </div>

    <script src="/js/popModal.js"></script>
    <script src="/js/script.js"></script>
</html>
